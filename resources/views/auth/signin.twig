{% extends 'login.twig' %}

{% block content %}
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Sign In</h3>
              </div>
              <div class="panel-body">
                  <form action="{{ path_for('signin') }}" method="post">
                      <fieldset>
                          <div class="form-group">
                              <input type="email" class="form-control" id="user_email" name="user_email" aria-describedby="emailHelp" placeholder="Enter email">
                          </div>
                          <div class="form-group">
                              <input type="password" class="form-control" id="user_password" name="user_password" class="user_password" placeholder="Enter Password">
                          </div>
                          <div class="checkbox">
                              <label>
                                  <input type="checkbox" class="form-check-input" name="remember_me"> Remember me
                              </label>
                          </div>
                          <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
                      </fieldset>
                  </form>
              </div>
          </div>
      </div>
  </div>  
{% endblock %}

