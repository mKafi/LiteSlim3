{% extends 'common/app.twig' %}

{% block content %}    
        
        <div class="col-md-12 col-sm-12 col-offset-3">
            <h2>User</h2>
            <div class="panel panel-default">
                <div class="panel-heading">
                    {% if data.id is not empty %} Update user {% else %} Create new user {% endif %}
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">                                
                                <form action="{% if data.id is not empty %} {{ path_for('user.edit.submit') }} {% else %} {{ path_for('user.create.submit') }} {% endif %}" method="post">
                                    {% if data.id is not empty %}
                                    <input type="hidden" name="userId" value="{{ data.id }}">
                                    {% endif %}
                                                                        
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nick</label>
                                        <input type="text" class="form-control" id="nick" name="nick" placeholder="Enter nick" value="{{ data.nick }}">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Full name</label>
                                        <input type="text" class="form-control" id="full_name" name="name" placeholder="Full name" value="{{ data.name }}">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">email</label>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value="{{ data.email }}">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Phone</label>
                                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone" value="{{ data.phone }}">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" value="">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">User type</label>
                                        <select class="form-control" name="rid">
                                            {% for key, opt in data.roles %}
                                                <option value="{{ key }}" {% if key == data.rid %} selected="selected" {% endif %} >{{ opt }}</options>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>  
                        </div>
                    </div>
                    
                </div>
            </div>    
        </div> 
   
{% endblock %}